scroll-view {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 20rpx;
    box-sizing: border-box;
    background: #f0f1f2;
}

video {
    height: 400rpx;
}

.info-container,video {
    width: 100%;
    margin-top: 20rpx;
}

.info-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.info-container view {
    width: 100%;
    background-color: #fff;
    padding: 20rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #000;
}

.result-container {
    margin-top: 40rpx;
    height: 100rpx;
    width: 100%;
}

.choose,.result-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.choose {
    height: 100%;
    width: 40%;
    border-radius: 50px;
    background: #818080;
    font-size: 30rpx;
    color: rgb(255, 255, 255);
    margin-right: 40rpx;
    box-shadow: 0 2px 2px s0 rgba(204,221,221,.87);
}

.copy {
    background: #00f;
}

.copy,.save {
    height: 100%;
    width: 40%;
    border-radius: 50px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #fff;
    box-shadow: 0 2px 2px 0 rgba(204,221,221,.87);
}

.save {
    background: #000000;
    margin-right: 40rpx;
}

.compress-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}